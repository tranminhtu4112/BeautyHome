<!-- ...:::: Start Customer Login Section :::... -->
<div class="customer-login">
    <div class="container">
        <div class="row">
            <!--login area start-->
            <div class="col-lg-6 col-md-6">
                <div class="account_form" data-aos="fade-up" data-aos-delay="0">
                    <h3>Đăng Nhập</h3>
                    <form action="/Login/ReLogin" method="POST">
                        <div class="default-form-box">
                            <label>Tên Đăng Nhập <span>*</span></label>
                            <input type="text" name="username">
                        </div>

                        <div class="default-form-box">
                            <label>Mật Khẩu <span>*</span></label>
                            <input type="password" name="password">
                        </div>
                        <div class="login_submit">

                            <label class="checkbox-default mb-4" for="offer">
                                <input type="checkbox" id="offer">
                                <span>Lưu đăng nhập</span>
                            </label>
                            <button class="btn btn-md btn-black-default-hover mb-4" type="submit">Đăng Nhập</button>
                            <a class="btn btn-facebook" href="/Login/LoginFB">
                                Đăng Nhập Bằng FaceBook
                            </a>

                            <a href="#">Quên Mật Khẩu ?</a>

                        </div>
                    </form>
                </div>
            </div>
            <!--login area start-->
            <!--register area start-->
            <div class="col-lg-6 col-md-6">
                <div class="account_form register" data-aos="fade-up" data-aos-delay="200">
                    <h3>Đăng Ký</h3>
                    <form action="Login/Register" method="POST">
                        <div class="default-form-box">
                            <label>Tên Đăng Nhập <span>*</span></label>
                            <input type="text" name="username">
                        </div>

                        <div class="default-form-box">
                            <label>Mật Khẩu <span>*</span></label>
                            <input type="password" name="password">
                        </div>

                        <div class="default-form-box">
                            <label>Tên đầy đủ <span>*</span></label>
                            <input type="text" name="fullname">
                        </div>

                        <div class="default-form-box">
                            <label>Email <span>*</span></label>
                            <input type="email" name="email">
                        </div>

                        <div class="default-form-box">
                            <label>Địa chỉ <span>*</span></label>
                            <input type="text" name="address">
                        </div>

                        <div class="default-form-box">
                            <label>Số điện thoại <span>*</span></label>
                            <input type="text" name="phone">
                        </div>
                        <div class="login_submit">
                            <button class="btn btn-md btn-black-default-hover" type="submit">Đăng Ký</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--register area end-->
        </div>
    </div>
</div> <!-- ...:::: End Customer Login Section :::... -->
